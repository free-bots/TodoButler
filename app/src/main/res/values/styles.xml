<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/nord3</item>

        <item name="extendedFloatingActionButtonStyle">@style/ExtendedFloatingActionButtonTheme
        </item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonTheme</item>

        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="android:contextPopupMenuStyle">
            @style/Widget.MaterialComponents.PopupMenu.ContextMenu
        </item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow
        </item>
        <item name="materialButtonStyle">@style/button</item>
    </style>

    <style name="ExtendedFloatingActionButtonTheme" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="FloatingActionButtonTheme" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="background">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/nord4</item>
        <item name="android:textColor">@color/nord4</item>
        <item name="colorControlActivated">@color/nord4</item>
        <item name="boxStrokeColor">@color/nord4</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/nord4</item>
        <item name="iconTint">@color/nord4</item>
        <item name="backgroundTint">@color/nord4</item>
    </style>
</resources>
